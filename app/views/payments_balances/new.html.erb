<h1>Budget List</h1>
<%= form_with model: @form, url: payments_balances_path, local: true do |form| %>
<%= render 'devise/shared/error_messages', model: @form %>
  <div class="field">
    
    <%= form.label :date, 'Date' %>
    <%= form.date_field :date, type: "date" %>
  </div>

  <table>
    <thead>
      <tr>
        <th> purpose </th>
        <th> amount </th>
        <th> payment </th>
        <th> times </th>
      </tr>
    </thead>
  <tbody>
    <%= form.fields_for :payments_balances do |balance| %>
      <tr>
        <td><%= balance.text_field :purpose, placeholder: "まだ未実装" %></td>
        <td><%= balance.text_field :amount, placeholder: "0"  %></td>
        <td><%= balance.collection_select(:payment_id, Payment.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %></td>
        <td><%= balance.text_field :payment_times, placeholder: "1" %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
  <%= form.submit "登録" %>
  <%= link_to "戻る", root_path %>
<% end %>