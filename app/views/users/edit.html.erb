<%= render "devise/shared/header" %>
<%= form_with model: @user, url: user_path(current_user.id), id: "pb-form", local: true do |f| %>
<%= render "devise/shared/error_messages", model: f.object %> 

<h2>User Infomation Update</h2>
<div class="user_info_amount">
  <table class="edit_money_info_table" cellspacing="0">
      <thead>
        <tr>
          <th> 初期 </th>
          <th> 現在 </th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <th class="money_info_table_col1">
          <%= f.label :cash, "所持金(現金)" %>:
          <%= f.text_field :cash, class: "form_text", type: "number", placeholder: "0", style: "text-align:right", id:"user-cash" %>
        </th>
        <td class="money_info_table_col2">
          <span id="total-current-amount"></span> -
            <%= f.label :cash_over_short, "過不足" %>:
            <%= f.text_field :cash_over_short, class: "form_text", type: "number", placeholder: "0", style: "text-align:right", id:"user-over-short" %> =
          <span id="total-exact-amount"></span>
        </td>
      </tr>
      <tr>
        <th class="money_info_table_col1">
          <%= f.label :debt, "借金状況" %>:
          <%= f.text_field :debt, class: "form_text", type: "number", placeholder: "0", style: "text-align:right", id:"user-debt" %>
        </th>
        <td class="money_info_table_col2">
          <span id="debt_future"></span>
        </td>
      </tr>
      <tr>
        <th class="money_info_table_col1">
          <%= f.label :savings, "貯金額" %>:
          <%= f.text_field :savings, class: "form_text", type: "number", placeholder: "0", style: "text-align:right", id:"user-savings" %>
        </th>
        <td class="money_info_table_col2">
          <span id="current_savings"></span>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="money_info_annual_income">
    <%= f.label :annual_income, "年収(大体でOK)" %>:
    <%= f.text_field :annual_income, class: "form_text", type: "number", placeholder: "0", style: "text-align:right", id:"user-annual-income" %>万
  </div>
</div>

  <div class="setting_menu">
    <div class="save">
      <%= image_tag "メモアイコン.png", size: "30x30" %>
      <%= f.submit "更新", class: "save_btn", id: "save-button" %>
    </div>
    <div class="back">
      <%= image_tag "Uターン矢印 1.png", size: "20x20" %>
      <%= link_to "戻る", user_path(current_user.id), class: "back_btn" %>
    </div>
  </div>


  <script>
    let user_sum_cash = <%= @sum_cash.to_i %>
    let user_debt_future = <%= @debt_num_future.to_i %>
    let user_sum_atm = <%= @sum_atm.to_i %>
  </script>
<% end %>
